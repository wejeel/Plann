<%= form_for([@user, @receipt]) do |form| %>
<% if @receipt.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(receipt.errors.count, "error") %> prohibited this receipt from being saved:</h2>

      <ul>
      <% receipt.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= form.label :'Receipt date' %>  <small id="emailHelp" class="form-text text-muted">What's the date on your receipt <i>(ex. 24-04-2019)</i></small>
    <%= form.text_field :date, class: 'form-control'%>
  </div>

  <div class="field form-group">
    <%= form.label :total %>  <small id="emailHelp" class="form-text text-muted">What's the total on your receipt <i>(ex. 200.32)</i></small>
    <%= form.text_field :total, class: 'form-control'%>
  </div>

  <div class="field form-group">
    <%= form.label :'Shop name' %>  <small id="emailHelp" class="form-text text-muted">Set your savings type <i>(ex. Spar, centra, M & S)</i></small>
    <%= form.text_field :shopName, class: 'form-control'%>
  </div>

  <div class="field form-group">
    <%= form.label :'Shop Address' %>
    <%= form.text_field :shopAdress, class: 'form-control', placeholder: '12 Havron town, shalway'%>
  </div>

    <div class="actions form-group">
    <%= form.submit 'Create receipt', class: 'btn btn-success' %>
  </div>

 <small id="emailHelp" class="form-text text-muted">Expensease helps you save smarter</small>


<% end %>
