  <div class="row" style="margin-top:20px">
        <div class="col-md-4"></div>
        <div class="col-md-4">
          <center> <h2>Expensease budget planner</h2> 
          

<br>
  
<%= form_tag "/generateBudget" do %>

<div class="card">
     <div class="card-header">
     <small id="emailHelp" class="form-text text-muted">Expensease helps you save smarter</small>
  </div>
  
  <div class="card-body">
   
 <small id="emailHelp" class="form-text text-muted">Give your budget a name <i>(ex. budget for a new phone)</i></small>
  <br>
  
 
 <%= text_field_tag :budgetname, nil, placeholder: 'My budget', class: 'form-control input_budgetform', id: "budgetname" %>
 <br>
  <small id="emailHelp" class="form-text text-muted">Set your savings target amount below <i>(ex. 1000)</i></small>
  <br>
  
   <%= text_field_tag :budgetamount, nil, placeholder: 'My budget', class: 'form-control input_budgetform', id: "budgetamount", onkeypress: "return isNumber(event)" %>
   
  <br>
  <small id="emailHelp" class="form-text text-muted">Set your savings type <i>(ex. Basic, Low, Medium Aggressive)</i></small>
  <br>
  
  <%= select_tag 'savings_type', options_for_select([["Basic savings type",1],["Low savings type",2],["Medium savings type",3],["Aggressive savings type",4]]), class: 'form-control'  %>
  
  <br><br>
  
 <%= submit_tag "Create budget", class: 'btn btn-success', disabled: true, id: "submitbtn" %>
  </div>
</div>


<% end %>
 
                <script>
                    $(".input_budgetform")
                            .bind("change", validate_budgetform_form)
                            .bind("keyup", validate_budgetform_form);
                            
                            
           function isNumber(evt) {
    evt = (evt) ? evt : window.event;
    var charCode = (evt.which) ? evt.which : evt.keyCode;
    if (charCode > 31 && (charCode < 48 || charCode > 57)) {
        return false;
    }
    return true;
}
                            
                             function validate_budgetform_form()
                    {

                        submitbtn = document.getElementById("submitbtn");

                        var f1 = $("#budgetname").val().trim();
                        var f2 = $("#budgetamount").val().trim();

                        if (f1 !== "" && f2 !== "")
                        {
                            $("#submitbtn").prop("disabled", false);
                            submitbtn.style.background = "#33cc00";
                            return true;
                        }
                        else
                        {
                            $("#submitbtn").prop("disabled", true);
                            submitbtn.style.background = "#a5dcda";
                            return false;
                        }

                    }
        </script>  
 
         </center>
        </div>
      
        <div class="col-md-4"></div>
        
    </div>